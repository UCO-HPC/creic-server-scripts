BootStrap: yum
OSVersion: 7
MirrorURL: http://mirror.centos.org/centos-%{OSVERSION}/%{OSVERSION}/os/x86_64/
Include: yum

%labels
  Maintainer Lillian Kelting
  RStudio_Version 2022.07.1-554

%help
  This will run RStudio Server

%apprun rserver
  if ! [[ "$USER_PATH" = "" ]]; then
    export PATH="$USER_PATH"
  fi

  exec rserver "${@}"

%runscript
  if ! [[ "$USER_PATH" = "" ]]; then
    export PATH="$USER_PATH"
  fi

  exec rserver "${@}"

%environment
  export PATH=/usr/lib/rstudio-server/bin:${PATH}
  export LD_LIBRARY_PATH=/usr/lib64:$LD_LIBRARY_PATH
  export CMAKE_PREFIX_PATH=$CMAKE_PREFIX_PATH
  export CPATH=$CPATH
  export LIBRARY_PATH=$LIBRARY_PATH
  export MANPATH=$MANPATH
  export PKG_CONFIG_PATH=$PJG_CONFIG_PATH
  export XDG_DATA_DIRS=$XDG_DATA_DIRS

%post
  # Software versions
  export RSTUDIO_VERSION=2022.07.1-554

  # Install RStudio Server
  yum update -y
  yum install -y \
    ca-certificates \
    wget \
    pam
  wget \
    --no-verbose \
    --continue \
    'https://download2.rstudio.org/server/centos7/x86_64/rstudio-server-rhel-2022.07.1-554-x86_64.rpm' \
    --output-document \
    rstudio-server.rpm 
  yum install -y rstudio-server.rpm
  rm -f rstudio-server.rpm

# Add support for LDAP authentication
yum -y install python3
yum -y install python3-pip
pip3 install ldap3

# Clean up
yum clean all

# Make sure /etc/localtime exist
touch /etc/localtime
